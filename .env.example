# QAVibe Environment Configuration
# Copy this file to .env and customize for your deployment

# ================================
# SITE CONFIGURATION
# ================================
SITE_URL=https://qavibeapp.com
SITE_NAME=QAVibe
NODE_ENV=development
PORT=3001

# Product URLs
TESTFLUX_URL=https://testflux.qavibeapp.com
STACKHEALTH_URL=https://stackhealth.qavibeapp.com

# ================================
# ANNOUNCEMENT BANNER
# ================================
ANNOUNCEMENT_ENABLED=true
ANNOUNCEMENT_MESSAGE=ðŸŽ‰ New Feature: StackHealth now includes automated security scanning! Learn more â†’
ANNOUNCEMENT_LINK=#products
ANNOUNCEMENT_DISMISSIBLE=true
ANNOUNCEMENT_AUTO_HIDE=false
ANNOUNCEMENT_TYPE=info

# ================================
# BLOG CONFIGURATION
# ================================
# Admin password for blog management
BLOG_ADMIN_PASSWORD=admin123

# Database configuration (SQLite)
DATABASE_PATH=./blog.db

# ================================
# API ENDPOINTS & FORMS
# ================================
DEMO_FORM_ENDPOINT=/api/demo-request
CONTACT_FORM_ENDPOINT=/api/contact

# Form Handling (choose one)
# Netlify Forms (automatic when deployed to Netlify)
USE_NETLIFY_FORMS=true

# Formspree Configuration
FORMSPREE_ENDPOINT=
FORMSPREE_API_KEY=

# EmailJS Configuration
EMAILJS_SERVICE_ID=
EMAILJS_TEMPLATE_ID=
EMAILJS_PUBLIC_KEY=

# ================================
# ANALYTICS & TRACKING
# ================================
GOOGLE_ANALYTICS_ID=
GOOGLE_TAG_MANAGER_ID=
FACEBOOK_PIXEL_ID=
HOTJAR_ID=
SENTRY_DSN=
LOGROCKET_ID=

# ================================
# SOCIAL MEDIA LINKS
# ================================
GITHUB_URL=https://thoangdev.github.io/
TWITTER_URL=
LINKEDIN_URL=https://www.linkedin.com/in/tommyqhoang/

# ================================
# SEO CONFIGURATION
# ================================
SEO_TITLE=QAVibe - Free Enterprise Testing Tools with Blog
SEO_DESCRIPTION=Free enterprise-grade testing tools including TestFlux dashboard and StackHealth scorecard platform. Transform your software quality process at zero cost. Read our blog for insights and updates.
SEO_KEYWORDS=testing tools,automation,quality assurance,TestFlux,StackHealth,free enterprise tools,CI/CD,Playwright,k6,ZAP,testing blog
SEO_IMAGE=https://qavibeapp.com/og-image.png

# ================================
# DEVELOPMENT CONFIGURATION
# ================================
DEV_PORT=8002
DEV_HOST=localhost

# ================================
# PRODUCTION CONFIGURATION
# ================================
# CDN Configuration
CDN_URL=
STATIC_ASSETS_URL=

# Cache Configuration
CACHE_MAX_AGE=86400
STATIC_CACHE_MAX_AGE=31536000

# Security
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com https://www.google-analytics.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://www.google-analytics.com;

# ================================
# FEATURE FLAGS
# ================================
ENABLE_BLOG=true
ENABLE_DARK_MODE=true
ENABLE_PWA=true
ENABLE_OFFLINE_MODE=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_ADMIN_PANEL=true
