# QAVibe Environment Configuration
# Copy this file to .env and customize for your deployment

# ================================
# SITE CONFIGURATION
# ================================
SITE_URL=https://qavibeapp.com
SITE_NAME=QAVibe
NODE_ENV=development
PORT=3001
API_PORT=3002
DEV_PORT=8002

# Product URLs
TESTFLUX_URL=https://testflux.qavibeapp.com
STACKHEALTH_URL=https://stackhealth.qavibeapp.com

# ================================
# ANNOUNCEMENT BANNER
# ================================
ANNOUNCEMENT_ENABLED=true
ANNOUNCEMENT_MESSAGE=ðŸŽ‰ New Feature: StackHealth now includes automated security scanning! Learn more â†’
ANNOUNCEMENT_LINK=#products
ANNOUNCEMENT_DISMISSIBLE=true
ANNOUNCEMENT_TYPE=info

# ================================
# BLOG & DATABASE CONFIGURATION
# ================================
# Admin password for blog management
BLOG_ADMIN_PASSWORD=your-secure-password-here

# Database configuration (SQLite)
DATABASE_PATH=./blog.db

# ================================
# FORM HANDLING
# ================================
# API endpoints
DEMO_FORM_ENDPOINT=/api/demo-request
CONTACT_FORM_ENDPOINT=/api/contact

# Netlify Forms (set to true if deploying to Netlify)
USE_NETLIFY_FORMS=false

# External form services (choose one)
FORMSPREE_ENDPOINT=
EMAILJS_SERVICE_ID=
EMAILJS_TEMPLATE_ID=
EMAILJS_PUBLIC_KEY=

# ================================
# WEBHOOKS & NOTIFICATIONS
# ================================
SLACK_SUPPORT_WEBHOOK_URL=
SLACK_DEMO_WEBHOOK_URL=

# ================================
# SECURITY & RATE LIMITING
# ================================
# reCAPTCHA
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# Rate limits (requests per time window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SUPPORT_RATE_LIMIT_MAX_REQUESTS=5
DEMO_RATE_LIMIT_MAX_REQUESTS=3
LOGIN_RATE_LIMIT_MAX_ATTEMPTS=5

# ================================
# ANALYTICS & TRACKING
# ================================
GOOGLE_ANALYTICS_ID=
GOOGLE_TAG_MANAGER_ID=
SENTRY_DSN=

# ================================
# SOCIAL MEDIA LINKS
# ================================
GITHUB_URL=https://github.com/apercallc/qavibeapp
LINKEDIN_URL=https://www.linkedin.com/in/tommyqhoang/

# ================================
# SEO CONFIGURATION
# ================================
SEO_TITLE=QAVibe - Free Enterprise Testing Tools
SEO_DESCRIPTION=Free enterprise-grade testing tools including TestFlux dashboard and StackHealth scorecard platform. Transform your software quality process at zero cost.
SEO_KEYWORDS=testing tools,automation,quality assurance,TestFlux,StackHealth,free enterprise tools,CI/CD,Playwright,k6,ZAP
SEO_IMAGE=https://qavibeapp.com/og-image.png

# ================================
# FEATURE FLAGS
# ================================
ENABLE_BLOG=true
ENABLE_DARK_MODE=true
ENABLE_PWA=true
ENABLE_ADMIN_PANEL=true
